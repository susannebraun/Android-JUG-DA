<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DemoActivity" >

	<ImageView
	    android:id="@+id/portrait_image"
	    android:layout_width="120px"
	    android:layout_height="155px"
	    android:layout_centerHorizontal="true"
	    android:padding="@dimen/body_padding_medium"
	    android:src="@drawable/patrick_dempsey_portrait"
	    tools:ignore="ContentDescription,PxUsage" />
	
	<TextView
	    android:id="@+id/mobile_section"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/portrait_image"
	    android:padding="@dimen/body_padding_medium"
	    android:text="Mobil"
	    android:textSize="@dimen/text_size_medium"
	    tools:ignore="HardcodedText" />
	
	<View
	    android:id="@+id/section_divider"
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:layout_below="@id/mobile_section"
	    android:background="#ff0000"
	    android:padding="@dimen/body_padding_medium"
	    tools:ignore="PxUsage" >
</View>
	
	<ImageView
	    android:id="@+id/phone_icon"
	    android:layout_width="50px"
	    android:layout_height="50px"
	    android:layout_below="@id/section_divider"
	    android:padding="@dimen/body_padding_medium"
	    android:src="@drawable/ic_device_access_call_wrong"
	    tools:ignore="ContentDescription,PxUsage" />
	
	<TextView
	    android:id="@+id/phone_number"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/section_divider"
	    android:layout_toRightOf="@id/phone_icon"
	    android:padding="@dimen/body_padding_medium"
	    android:text="(855) 757-6816"
	    android:textSize="@dimen/text_size_large"
	    tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/call_button"
        android:layout_width="320px"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_number"
        android:padding="@dimen/body_padding_medium"
        android:text="Call Patrick Dempsey"
        android:textSize="@dimen/text_size_medium"
        tools:ignore="HardcodedText,PxUsage" />

</RelativeLayout>